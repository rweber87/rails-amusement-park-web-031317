<%= form_for(@user) do |f| %>
		<%= f.label :name %><br>
		<%= f.text_field :name %><br>
		<%= f.label :password %><br>
		<%= f.password_field :password %><br>
		<%= f.label "How happy are you? (1-5 scale, 5 being happiest)" %><br>
		<%= f.text_field :happiness %><br>
		<%= f.label "Height (in inches)" %><br>
		<%= f.text_field :height %><br>
		<%= f.label "How nauseous are you? (1-5 scale, 5 being super nauseous)" %><br>
		<%= f.text_field :nausea %><br>
		<%= f.label "How many tickets do you have?" %><br>
		<%= f.text_field :tickets %><br>
		<%= f.label "Check here if you are an admin" %>
		<%= f.check_box :admin %><br>
		<%= f.submit %>
<% end %>